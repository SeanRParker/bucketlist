<h1>Items for: <%= @list.name %></h1>

<% if @items.any? %>
	<ul>
		<% @items.each do |item| %>
			<li>
				<h4>Item:</h4>
				<%= link_to item.name, edit_list_item_path(@list, item) %>
				<% unless item.image.blank? %>
					<%= image_tag item.image.url(:medium) %>
				<% else %>
					<h5>No photo.</h5>
				<% end %>
			</li>
		<% end %>
	</ul>
<% else %>
	<h3> This list doesn't have any items. Please add one!</h3>
<% end %>

<%= link_to 'Add new item', new_list_item_path, class: "waves-effect waves-light green lighten-2 btn" %>
<%= link_to 'Back to Bucketlist', lists_path, class: "waves-effect waves-light green lighten-2 btn" %>
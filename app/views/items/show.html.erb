<h1>Item: <%=@item.name %></h1>

<% if @item.image != 'nil' %>
		<%= image_tag @item.image.url(:medium) %>
<% else %>
	<h3>No photo.</h3>
<% end %>

<h3>Is your item complete? <%= @item.complete %></h3>
<h3>Is your item liked? <%= @item.like %></h3>

<%= link_to 'All Items in Bucketlist', list_items_path(@list), class: "waves-effect waves-light btn green lighten-2" %>


<%= link_to 'Edit Item', edit_list_item_path(@list, @item), class: "waves-effect waves-light btn green lighten-2" %>

<%= link_to 'Delete Item', list_item_path(@list, @item), method: :delete, data: {confirm: 'Sure you want to delete this?'} class: "waves-effect waves-light btn red lighten-1" %>


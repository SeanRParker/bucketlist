<h1>Bucketlist: <%= @list.name %></h1>
<br />

<h4>Description: <%= @list.description %></h4>
<% if @items.any? %>
		<div class="row">
			<% @items.each do |item| %>
		        <div class="col s12 m6 l4">
		          <div class="card">
		            <div class="card-image">
  								<% unless item.image.blank? %>
										<%= cl_image_tag item.image.url(:medium) %>
									<% else %>
										<h5>No photo.</h5>
									<% end %>
		            </div>
		            <div class="card-content">
		              <h6><%= item.name %></h6>
		            </div>
		            <div class="card-action">
		              <%= link_to 'View item', list_item_path(@list, item) %>
		            </div>
		          </div>
		        </div>
			<% end %>
		</div>
<% else %>
  <h4>No items, please add one!</h4>
<% end %>



<%= link_to 'Add Items To List', new_list_item_path(@list), class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Edit List', edit_list_path, class: "waves-effect waves-light btn green lighten-2" %>
<br />
<br />
<%= link_to 'All Bucketlists', lists_path, class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Delete List', list_path(@list), method: :delete, class: "waves-effect waves-light red lighten-1 btn", data: {confirm: 'Sure you want to delete this?'} %>

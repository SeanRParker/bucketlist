<h1>Bucketlist: <%= @list.name %></h1>
<br />

<h4>List Description: <%= @list.description %></h4>
<% if @items.any? %>
	<ul>
		<% @items.each do |item| %>
			<li>
  			<h5>To do: <%= link_to item.name, list_item_path(@list, item) %></h5>
  			<%= image_tag item.image.url(:medium) %>
  		</li>
  	<% end %>
  </ul>
<% else %>
  <h3>No items, please add one!</h3>
<% end %>

<%= link_to 'Add Items', new_list_item_path(@list), class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Edit List', edit_list_path, class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Delete List', list_path(@list), method: :delete, class: "waves-effect waves-light red lighten-1 btn", data: {confirm: 'Sure you want to delete this?'} %>
